<!-- Include the header -->
<%- include('partials/header') %>

<!-- New Post Banner -->
<section class="new-post-banner">
<div class="container">
    <h1><%= heading %></h1>
    <p>Share your insights with the CoreCode community. Whether it's a tip for fellow coders or a workout routine, we'd love to hear from you!</p>
</div>
</section>

<!-- New Post Form -->
<section class="new-post-form">
<div class="container">
    <% if (locals.post) { %>
        <form action="/api/posts/<%= post.id %>" method="POST">
            <!-- Title -->
            <div class="form-group">
                <label for="title">Post Title</label>
                <input type="text" id="title" name="title" value="<%= post.title %>">
            </div>
        
            <!-- Author -->
            <div class="form-group">
                <label for="author">Author</label>
                <input type="text" id="author" name="author" value="<%= post.author %>">
            </div>
        
            <!-- Content -->
            <div class="form-group">
                <label for="content">Content</label>
                <textarea id="content" name="content" rows="10"><%= post.content %></textarea>
            </div>
        
            <!-- Submit -->
            <div class="form-group">
                <button type="submit" class="btn-submit"><%= submit %></button>
            </div>
            </form>
    <% } else { %>
        <form action="/api/posts" method="POST">
            <!-- Title -->
            <div class="form-group">
                <label for="title">Post Title</label>
                <input type="text" id="title" name="title" placeholder="Enter your post title" required>
            </div>
        
            <!-- Author -->
            <div class="form-group">
                <label for="author">Author</label>
                <input type="text" id="author" name="author" placeholder="By:" required>
            </div>
        
            <!-- Content -->
            <div class="form-group">
                <label for="content">Content</label>
                <textarea id="content" name="content" rows="10" placeholder="Write your post content here..." required></textarea>
            </div>
        
            <!-- Submit -->
            <div class="form-group">
                <button type="submit" class="btn-submit"><%= submit %></button>
            </div>
        </form>
    <% } %>
</div>
</section>

<!-- Include the footer -->
<%- include('partials/footer') %>
