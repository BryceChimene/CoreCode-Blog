<%- include("partials/header.ejs");  %>
<!-- Tech Banner -->
<section class="tech-banner">
<div class="container">
    <h1>Tech Insights</h1>
    <p>Dive into the latest coding tutorials, tech news, and programming insights to level up your skills. From beginner tips to advanced topics, we've got you covered!</p>
</div>
</section>

<!-- Tech Posts Section -->
<section class="tech-posts">
<div class="container">
    <h2>Latest in Tech</h2>
    <div class="posts-grid">
        <% if (techPosts.length > 0) { %>
            <% techPosts.forEach(function(post) { %>
              <div class="post-card">
                <h3><a href="/post/<%= post.id %>"><%= post.title %></a></h3>
                <p><%= post.snippet %></p>
                <a href="/post/<%= post.id %>" class="read-more">Read More</a>
              </div>
            <% }) %>
          <% } else { %>
            <p>No posts available. Be the first to create one!</p>
        <% } %>
    </div>
</div>
</section>

<!-- Tech Resources Section -->
<section class="tech-resources">
<div class="container">
    <h2>Helpful Coding Tips</h2>
    <ul>
    <li>Keep your code modular and reusable.</li>
    <li>Regularly test and debug your projects.</li>
    <li>Practice version control using Git.</li>
    <li>Focus on learning algorithms and data structures.</li>
    <li>Read official documentation for deeper insights.</li>
    </ul>
</div>
</section>
<%- include("partials/footer.ejs");  %>